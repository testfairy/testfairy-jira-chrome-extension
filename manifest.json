{
  "manifest_version": 2,

  "name": "TestFairy for JIRA extension",
  "description": "",
  "version": "1.0",
  "permissions": [
    "tabs"
  ],
   "browser_action": {
    "default_icon": "testfairy.ico"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "document_end" : "document_end",
      "js": [
        "background.js"
      ]
    }
  ]
}
