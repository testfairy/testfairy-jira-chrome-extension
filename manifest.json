{
  "manifest_version": 2,

  "name": "TestFairy QuickView",
  "description": "",
  "version": "1.5",
  "permissions": [
    "activeTab"
  ],
   "browser_action": {
    "default_icon": "testfairy.ico"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "common.js",
        "jira.js",
        "zendesk.js",
        "devicefarm.js",
        "background.js",
        "trello.js"
      ]
    }
  ],
  "applications": {
    "gecko": {
      "id": "support@testfairy.com"
    }
  }
}
